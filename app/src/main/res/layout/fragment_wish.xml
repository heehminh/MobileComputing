<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WishFragment">

    <ImageView
        android:id="@+id/wish_back_iv"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_back"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/wish_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wish"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/main_red"
       android:gravity="center"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="@id/wish_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/wish_back_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wish_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/wish_text_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_wish_movie"/>


</androidx.constraintlayout.widget.ConstraintLayout>

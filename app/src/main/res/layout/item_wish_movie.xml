<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/item_wish_image_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/movie05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_wish_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie05_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:maxLength="10"
        android:ellipsize="end"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/item_wish_image_iv"
        app:layout_constraintStart_toStartOf="@id/item_wish_text_tv"
        app:layout_constraintEnd_toEndOf="@id/item_wish_text_tv"/>

    <TextView
        android:id="@+id/item_wish_text_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/movie05_text"
        android:textSize="12sp"
        android:maxLines="6"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/item_wish_image_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_wish_title_tv"/>

    <ImageView
        android:id="@+id/item_delete_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_delete"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_wish_image_iv"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/main_red"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_wish_image_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>





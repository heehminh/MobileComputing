<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/search_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="@color/main_red"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/search_title_et"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="text"
            android:hint="@string/frozen"
            android:imeOptions="actionSearch"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/search_text_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="30dp"
            />

        <ImageView
            android:id="@+id/search_icon_iv"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_search"
            app:layout_constraintTop_toTopOf="@id/search_title_et"
            app:layout_constraintBottom_toBottomOf="@id/search_title_et"
            app:layout_constraintEnd_toEndOf="@id/search_title_et"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
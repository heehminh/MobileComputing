<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/more_back_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_back"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/more_like_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:src="@drawable/icon_like_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/more_movie_image_iv"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:src="@drawable/movie01"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/more_back_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/more_movie_title_tv"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/frozen"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="30dp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/more_movie_image_iv"/>

    <ImageView
        android:id="@+id/more_movie_sharing_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_sharing"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/more_movie_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/more_movie_title_tv"/>

        <TextView
            android:id="@+id/more_movie_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/more"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/more_movie_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="20dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


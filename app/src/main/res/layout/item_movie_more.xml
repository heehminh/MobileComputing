<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/more_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/data_movie_image"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/more_text"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/frozen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/more_image"
        app:layout_constraintStart_toStartOf="@id/more_image"/>
    
    <ImageView
        android:id="@+id/more_like_on"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_like"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/more_text"
        app:layout_constraintBottom_toBottomOf="@id/more_text"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/more_like_off"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/icon_like_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/more_text"
        app:layout_constraintBottom_toBottomOf="@id/more_text"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>